<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@color/backgroundColor"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SettingsActivity"
    tools:showIn="@layout/activity_settings">

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="14sp"
            android:text="View Gallery"
            android:textColor="@android:color/white"
            android:layout_weight=".8"
            android:layout_width="0dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_height="wrap_content" />

        <com.flyco.tablayout.SegmentTabLayout
            android:layout_weight="1"
            android:id="@+id/viewGalleryTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:tl_bar_color="#000000"
            app:tl_textsize="12sp"
            app:tl_indicator_color="#FFFFFF"
            app:tl_textSelectColor="#000000"
            app:tl_indicator_corner_radius="4dp" />

    </LinearLayout>


    <TextView
        android:layout_marginTop="16dp"
        android:text="EXPORT"
        android:textColor="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="14sp"
            android:text="Video Quality"
            android:textColor="@android:color/white"
            android:layout_weight=".8"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <com.flyco.tablayout.SegmentTabLayout
            android:layout_weight="1"
            android:id="@+id/videoQualityTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:tl_bar_color="#000000"
            app:tl_textsize="12sp"
            app:tl_indicator_color="#FFFFFF"
            app:tl_textSelectColor="#000000"
            app:tl_indicator_corner_radius="4dp"
            app:tl_tab_padding="10dp"/>

    </LinearLayout>


    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="14sp"
            android:text="File Type"
            android:textColor="@android:color/white"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_weight=".8"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <com.flyco.tablayout.SegmentTabLayout
            android:layout_weight="1"
            android:id="@+id/fileTypeTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:tl_bar_color="#000000"
            app:tl_textsize="12sp"
            app:tl_indicator_color="#FFFFFF"
            app:tl_textSelectColor="#000000"
            app:tl_indicator_corner_radius="4dp"
            app:tl_tab_padding="5dp"/>

    </LinearLayout>


</LinearLayout>